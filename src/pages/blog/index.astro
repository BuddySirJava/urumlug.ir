---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="fa" dir="rtl">
	<head>
		<BaseHead title={`بلاگ - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			main {
				max-width: 1200px;
				margin: 0 auto;
				padding: 2rem 1rem;
			}

			.blog-section h1 {
				font-size: 2.5rem;
				color: rgb(var(--black));
				margin-bottom: 1rem;
				text-align: center;
			}

			.section-description {
				text-align: center;
				color: rgb(var(--gray));
				margin-bottom: 3rem;
				font-size: 1.1rem;
			}

			.blog-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
				margin-top: 2rem;
			}

			.blog-card {
				background: white;
				border-radius: 12px;
				box-shadow: 0 4px 6px rgba(var(--black), 10%);
				overflow: hidden;
				transition: transform 0.2s ease, box-shadow 0.2s ease;
			}

			.blog-card:hover {
				transform: translateY(-4px);
				box-shadow: var(--box-shadow);
			}

			.blog-card:first-child {
				grid-column: 1 / -1;
			}

			.blog-image {
				height: 200px;
				overflow: hidden;
			}

			.blog-card:first-child .blog-image {
				height: 300px;
			}

			.blog-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: transform 0.2s ease;
			}

			.blog-card:hover .blog-image img {
				transform: scale(1.05);
			}

			.blog-content {
				padding: 1.5rem;
			}

			.blog-content h3 {
				margin: 0 0 0.5rem 0;
				color: rgb(var(--black));
				font-size: 1.25rem;
				line-height: 1.3;
			}

			.blog-card:first-child .blog-content h3 {
				font-size: 1.75rem;
			}

			.blog-meta {
				display: flex;
				gap: 1rem;
				margin-bottom: 1rem;
			}

			.blog-meta .date {
				background: rgb(var(--gray-light));
				padding: 0.25rem 0.75rem;
				border-radius: 20px;
				font-size: 0.875rem;
				color: rgb(var(--gray-dark));
			}

			.blog-link {
				display: inline-block;
				background: var(--accent);
				color: #000;
				padding: 0.75rem 1.5rem;
				text-decoration: none;
				border-radius: 6px;
				font-weight: bold;
				transition: background 0.2s ease;
			}

			.blog-link:hover {
				background: var(--accent-dark);
			}

			@media (max-width: 768px) {
				.blog-grid {
					grid-template-columns: 1fr;
					gap: 1.5rem;
				}

				.blog-section h1 {
					font-size: 2rem;
				}

				.blog-content {
					padding: 1rem;
				}

				.blog-card:first-child .blog-image {
					height: 200px;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="blog-section">
				<h1>بلاگ</h1>
				<p class="section-description">آخرین مقالات و نوشته‌های ما در زمینه برنامه‌نویسی و فناوری</p>
				
				<div class="blog-grid">
					{
						posts.map((post) => (
							<article class="blog-card">
								{post.data.heroImage && (
									<div class="blog-image">
										<Image width={720} height={360} src={post.data.heroImage} alt="" />
									</div>
								)}
								<div class="blog-content">
									<h3>{post.data.title}</h3>
									<div class="blog-meta">
										<span class="date">
											<FormattedDate date={post.data.pubDate} />
										</span>
									</div>
									<a href={`/blog/${post.id}/`} class="blog-link">مطالعه بیشتر</a>
								</div>
							</article>
						))
					}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
