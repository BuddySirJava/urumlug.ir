---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import logo from '../assets/logo.png';
---

<header>
	<nav>
		<div class="brand">
			<img src={logo.src} alt="Urumlug" class="header-logo" />
			<h2><a href="/">{SITE_TITLE}</a></h2>
		</div>
		<div class="internal-links" dir="rtl">
			<HeaderLink href="/">خانه</HeaderLink>
			<HeaderLink href="/blog">بلاگ</HeaderLink>
			<HeaderLink href="/presentations">ارائه ها</HeaderLink>
			<HeaderLink href="/about">درباره ما</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
    font-family: 'Vazirmatn UI', 'Atkinson', sans-serif;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	.brand {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
